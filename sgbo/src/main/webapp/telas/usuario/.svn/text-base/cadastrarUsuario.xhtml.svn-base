<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:a4j="http://richfaces.org/a4j"
	xmlns:rich="http://richfaces.org/rich">

<ui:composition template="../../template/template.xhtml">
	<ui:define name="titulo">SGBO - CADASTRO DE USUÁRIO</ui:define>
	<ui:define name="conteudo">
		<h:form id="cadastro">
			<rich:tabPanel>
				<rich:tab label="Cadastro">
					<rich:panel>
						<f:facet name="header">
                    		Cadastro de Usuario
               			</f:facet>
						<h:panelGrid columns="2">
							<h:outputText value="Nome Completo:" />
							<h:inputText value="#{usuarioBean.usuario.nome}" rendered="true" style=" width : 228px;"/>
							
							<h:outputText value="Função:" />
							<h:inputText value="#{usuarioBean.usuario.funcao}" required="true" style=" width : 229px;"/>
							
							<h:outputText value="Login:" />
							<h:inputText value="#{usuarioBean.usuario.login}" required="true" />
							
							<h:outputText value="Senha:" />
							<h:inputSecret value="#{usuarioBean.usuario.senha}" required="true" />
							
							<h:commandButton action="#{usuarioBean.cadastrar}" value="Cadastrar" />
						</h:panelGrid>
					</rich:panel>
				</rich:tab>
			</rich:tabPanel>
		</h:form>
	</ui:define>
</ui:composition>
</html>