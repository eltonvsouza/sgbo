<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:a4j="http://richfaces.org/a4j"
	xmlns:rich="http://richfaces.org/rich">

<ui:composition template="../../template/template.xhtml">
	<ui:define name="titulo">SGBO - CADASTRO DE ESTABELECIMENTO</ui:define>
	<ui:define name="conteudo">
		<h:form id="cadastro">
			<rich:tabPanel>
				<rich:tab label="Cadastro">
					<rich:panel>
						<f:facet name="header">
                    		Cadastro de Estabelecimento
               			</f:facet>
						<h:panelGrid columns="2">
							<h:outputText value="Nome:" />
							<h:inputText value="#{estabelecimentoBean.estabelecimento.nome}" rendered="true" style=" width : 228px;"/>

							<h:outputText value="Endereço:" />
							<h:inputText value="#{estabelecimentoBean.estabelecimento.endereco}" required="true" style=" width : 228px;"/>
							
							<h:outputText value="Telefone:" />
							<h:inputText value="#{estabelecimentoBean.estabelecimento.telefone}" required="true" style=" width : 228px;"/>

							<h:commandButton action="#{estabelecimentoBean.cadastrar}" value="Cadastrar" />
						</h:panelGrid>
					</rich:panel>
				</rich:tab>
			</rich:tabPanel>
		</h:form>
	</ui:define>
</ui:composition>
</html>